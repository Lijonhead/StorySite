@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">
    <!-- Daily Prompt Section -->

    <!-- Welcome Section -->
    <div class="row align-items-center mb-5">
        <div class="col-md-6">
            <h1 class="display-5 text-primary mb-3"><strong>We're Promptly.</strong></h1>
            <h4 class="text-muted mb-4">Make your ideas come to life.</h4>
            <p>
                Welcome to Promptly, a creative space where imagination knows no bounds! Here, you can unleash your creativity by writing prompts and stories that inspire others.
                Whether you're an aspiring writer, a seasoned storyteller, or simply someone who loves to explore new ideas,
                our website is the perfect place to connect with like-minded individuals.
            </p>
            <p>Join us and turn ideas into stories, one prompt at a time!</p>
        </div>
        <div class="col-md-6 text-center">
            <img class="img-fluid" src="~/images/Final-Story.svg" alt="Creative Writing" />
        </div>
    </div>

    <!-- How It Works Section -->
    <div class="row align-items-center bg-light shadow-sm rounded p-4">
        <div class="col-md-6 text-center">
            <img class="img-fluid mb-4" src="~/images/final2-prompt.svg" alt="How It Works" />
        </div>
        <div class="col-md-6">
            <h1 class="display-5 text-primary mb-3"><strong>How it works.</strong></h1>
            <h4 class="text-muted">After creating an account, either:</h4>
            <p>
                Start by writing your own prompt, and other people will write stories based on it!
            </p>
            <h4 class="text-muted">or...</h4>
            <p>
                Find an interesting prompt, and write your own story inspired by it!
            </p>
        </div>
    </div>
</div>
