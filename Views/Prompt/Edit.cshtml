@model StorySite.Models.PromptEditViewModel

<div class="container d-flex align-items-center justify-content-center" style="min-height: 100vh;">
    <div class="card shadow-lg p-4" style="max-width: 600px; width: 100%;">
        <div class="card-body">
            <h2 class="card-title text-center text-primary mb-4">Edit Your Prompt</h2>

            <form asp-action="Edit" method="post">
                <!-- Hidden ID -->
                <input asp-for="Id" type="hidden" />
                <input asp-for="UserId" type="hidden"/>

                <!-- Prompt Content -->
                <div class="form-group mb-3">
                    <label asp-for="PromptContent" class="form-label">Prompt Content</label>
                    <textarea asp-for="PromptContent" class="form-control" rows="5" placeholder="Edit your prompt here..."></textarea>
                    <span asp-validation-for="PromptContent" class="text-danger"></span>
                </div>

                <!-- Submit Button -->
                <div class="d-grid mb-3">
                    <button type="submit" class="btn btn-primary btn-lg">Update Prompt</button>
                </div>

                <!-- Error Message -->
                @if (ViewData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger" role="alert">
                        @ViewData["ErrorMessage"]
                    </div>
                }
            </form>

            <!-- Back Link -->
            <div class="text-center mt-4">
                <a asp-action="List" class="text-decoration-none text-primary">
                    <i class="bi bi-arrow-left"></i> Back to Prompt List
                </a>
            </div>
        </div>
    </div>
</div>
