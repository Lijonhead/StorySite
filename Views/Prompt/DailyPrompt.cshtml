@model StorySite.Models.PromptViewModel




<div class="container mt-5">
    <!-- Daily Prompt Section -->
    <div class="text-center mb-4">
        <h2 class="text-primary">Today's Daily Prompt</h2>
    </div>

    <div class="card shadow-lg border-0">
        <div class="card-body">
            <h4 class="card-title text-dark text-center">
                <!-- Add text-center here -->
                @Model.PromptContent.Replace("DailyPrompt: ", "")
            </h4>
            <hr />
            <p class="card-text text-muted">
                <strong>Created By:</strong> @Model.UserName <br />
                <strong>Date Created:</strong> @Model.PromptDateCreated.ToString("MMMM dd, yyyy")
            </p>
        </div>
    </div>
</div>
