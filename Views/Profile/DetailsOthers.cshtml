@model StorySite.Models.ProfileViewModel

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="row g-0">
            <div class="col-md-4 text-center bg-light p-4">
                <img src="@Model.Picture" alt="Profile Picture" class="rounded-circle img-fluid" style="max-width: 200px; max-height: 200px;">
                <h4 class="mt-3">@Model.UserName</h4>
                <p class="text-muted">@Model.ProfileCreated.ToString("MMMM dd, yyyy")</p>
                @if (Model.UserId == User.FindFirst("sub")?.Value) // Check if the logged-in user is the owner
                {
                    <a asp-action="Edit" asp-route-userId="@Model.UserId" class="btn btn-primary mt-3">Edit Profile</a>
                }
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">About Me</h5>
                    <p class="card-text">@Model.Description</p>
                    <hr>

                    <ul class="list-group list-group-flush">
                        @if (Model.UserId == User.FindFirst("sub")?.Value) // Check if the logged-in user is the owner
                        {
                            <li class="list-group-item">
                                <a asp-action="PostHistory" asp-controller="Profile" class="btn btn-secondary">View Post History</a>
                            </li>
                        }


                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
