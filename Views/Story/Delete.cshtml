@model StorySite.Models.StoryViewModel

<h2>Delete Story</h2>

<p>Are you sure you want to delete this story?</p>

<div class="card mb-3">
    <div class="card-body">
        <p>@Model.StoryContent</p>
        <p><small>Created: @Model.StoryDateCreated.ToString("MMMM dd, yyyy")</small></p>
    </div>
</div>

<form asp-action="ConfirmDelete" method="post">
    <input type="hidden" name="promptId" value="@Model.Id" />
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a asp-action="Details" asp-controller="Prompt" asp-route-id="@Model.PromptId" class="btn btn-secondary">Cancel</a>
</form>
