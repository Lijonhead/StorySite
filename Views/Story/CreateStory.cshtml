@model StorySite.Models.CreateStoryViewModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">Create a Story</h2>
                </div>
                <div class="card-body">
                    <form asp-action="CreateStory" method="post">
                        <!-- Hidden Fields -->
                        <input type="hidden" asp-for="PromptId" />
                        <input type="hidden" asp-for="UserId" />
                        <input type="hidden" asp-for="StoryDateCreated" />

                        <!-- Story Content -->
                        <div class="mb-3">
                            <label asp-for="StoryContent" class="form-label">Your Story:</label>
                            <textarea asp-for="StoryContent" class="form-control" rows="5"></textarea>
                            <span asp-validation-for="StoryContent" class="text-danger"></span>
                        </div>

                        <!-- Buttons -->
                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-primary me-2">Post Story</button>
                            <a asp-action="Details" asp-controller="Prompt" asp-route-id="@Model.PromptId" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
