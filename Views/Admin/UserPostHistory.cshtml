@model StorySite.Models.UserPostHistoryViewModel

<div class="container mt-5">
    <h2 class="text-center mb-4">Post History for User: @Model.UserId</h2>

    <!-- Prompts Section -->
    <div class="mb-5">
        <h3 class="text-primary">Prompts</h3>
        @if (Model.Prompts.Any())
        {
            <div class="table-responsive">
                <table class="table table-bordered table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Content</th>
                            <th>Date Created</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var prompt in Model.Prompts)
                        {
                            <tr>
                                <td>@prompt.PromptContent</td>
                                <td>@prompt.PromptDateCreated.ToString("MMMM dd, yyyy")</td>
                                <td>
                                    <div class="d-flex">
                                        <a asp-action="Edit" asp-controller="Prompt" asp-route-id="@prompt.Id" class="btn btn-sm btn-warning me-2">Edit</a>
                                        <form asp-action="Delete" asp-controller="Prompt" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@prompt.Id" />
                                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this prompt?')">Delete</button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <p class="text-muted">No prompts have been created by this user.</p>
        }
    </div>

    <!-- Stories Section -->
    <div>
        <h3 class="text-primary">Stories</h3>
        @if (Model.Stories.Any())
        {
            <div class="table-responsive">
                <table class="table table-bordered table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Content</th>
                            <th>Date Created</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var story in Model.Stories)
                        {
                            <tr>
                                <td>@story.StoryContent</td>
                                <td>@story.StoryDateCreated.ToString("MMMM dd, yyyy")</td>
                                <td>
                                    <div class="d-flex">
                                        <a asp-action="EditStory" asp-controller="Admin" asp-route-id="@story.Id" class="btn btn-sm btn-warning me-2">Edit</a>
                                        <form asp-action="DeleteStory" asp-controller="Admin" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@story.Id" />
                                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this story?')">Delete</button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <p class="text-muted">No stories have been created by this user.</p>
        }
    </div>
</div>
